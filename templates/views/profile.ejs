<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title><%= user.firstname %></title>
</head>
<body>
    
    <h1 style="text-align:center">Welcome <%= user.username %></h1>

    <div id="btn">
        <!-- home -->
        <form action="/" method="get">
            <button type="submit">Home</button>
        </form>

        <form action="/create" method="get">
            <button type="submit">Create Note</button>
        </form>
        
        <form action="/logout" method="post">
            <button type="submit">LogOut</button>
        </form>

    </div>

    <div id="allPosts">
        <% posts.forEach((post)=>{ %>
        <div id="notes">
            <h3><%= post.title %></h3>
            <h5><%= post.description %></h5>
            <h6><%= post.created %></h6>
            
            <div id="btn">
                <!-- edit notes button  -->
                <form action="/<%= post._id %>/edit" method="get">
                <button type="submit">Edit</button>
                </form>

                <!-- delete notes button  -->
                <form action="/<%= post._id %>/delete" method="post">
                <button type="submit">Delete</button>
                </form>

                <!-- show all comments  -->
                <form action="/<%= post._id %>/show" method="get">
                    <button type="submit">All comments</button>
                </form>
            </div>

            <form action="/<%= post._id %>/addcomment" method="post">
                <div class="addcomment">
                    <input type="text" name="comment" id="comment" placeholder="Add a comment">
                    <button type="submit">Add comment</button>
                </div>
            </form>

        </div>
        <% }) %>
    </div>
</body>
</html>